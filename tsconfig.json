{
    "compilerOptions": {
      "module": "commonjs",
      "noImplicitAny": false,
      "removeComments": true,
      "preserveConstEnums": true,
      "outDir": "build",
      "strictNullChecks": true,
      "sourceMap": true,
      "target": "es2015",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true, 
      "noImplicitUseStrict": true
    },
    "include": [
      "*",
      "client/js/"
    ],
    "exclude": [
      "node_modules/*"
    ]
  }
